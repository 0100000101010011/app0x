<%- include('../layouts/header') %>

<form action="/users/edit/<%= id %>" method="post" name="form1" autocomplete="off">
    <table>
        <tr>
            <td>Name:</td>
            <td>
                <div class="inputfx1b">
                    <input type="text" name="name" id="name" value="<%= name %>" autocomplete="nope" autofocus class="gray3 padding1 border0 border1 border1h radius1 cursor1 transition1 input-field">
                </div>
            </td>
        </tr>
        <tr>
            <td>Age:</td>
            <td>
                <div class="inputfx1b">
                    <input type="text" name="age" id="age" value="<%= age %>" class="gray3 padding1 border0 border1 border1h radius1 cursor1 transition1 input-field">
                </div>
            </td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                <!-- https://gist.github.com/runspired/b9fdf1fa74fc9fb4554418dea35718fe -->
                <input type="text" name="fake-email-remembered" id="fake-email" style="display:none;">
                <div class="inputfx1b">
                 <input type="text" name="email" id="email" value="<%= email %>" autocomplete="nope" class="gray3 padding1 border0 border1 border1h radius1 cursor1 transition1 input-field">
                </div>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <div class="inputfx1b">
                    <input type="submit" name="Submit" value="Update" class="border0 blue1 blue1h border1 border1h border1f radius1 background0 background1h background1f transition1">
                </div>
            </td>
        </tr>
    </table>
</form>

<%- include('../layouts/footer') %>